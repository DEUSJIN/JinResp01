<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.jin.ssm.mapper.EmployeeMapper">
    <!--    List<Employee> getAll();-->
    <select id="getAll" resultMap="getAllMap">
        select e.id,e.last_name,e.gender,e.email,e.departmentId eDeptId,d.name
        from employee e,department d
        where e.departmentId=d.id
    </select>
    <resultMap id="getAllMap" type="pers.jin.ssm.beans.Employee">
        <id property="id" column="id"></id>
        <result property="lastName" column="last_name"></result>
        <result property="gender" column="gender"></result>
        <result property="email" column="gender"></result>
        <result property="department.id" column="eDeptId"></result>
        <result property="department.name" column="name"></result>
    </resultMap>
</mapper>
